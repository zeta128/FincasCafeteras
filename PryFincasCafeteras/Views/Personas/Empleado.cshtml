@model IEnumerable<PryFincasCafeteras.Models.Trabajador>
<h2>Trabajadores</h2>
<p>
    @Html.ActionLink("Registrar trabajador", "AgregarTrabajador")
    <br />
    <br />
    @Html.ActionLink("Registrar asociado", "AgregarAsociado")
    <br />
    <br />
    <br />
    <br />
    @Html.ActionLink("Ver asociados", "Asociado")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PeriodoContrato)
        </th>
        <th>
           Finca
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PeriodoContrato)
        </td>
        <td>
            @PryFincasCafeteras.Controllers.FincasController.NombreFinca(item.IdFinca.Value)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditarTrabajador", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "EliminarTrabajador", new { id=item.Id })
        </td>

    </tr>
}

</table>
